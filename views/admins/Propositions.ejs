<!doctype html>
<html lang="fr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>QuizBox</title>
  <!-- CSS de Bootstrap -->
  <link rel="stylesheet" href="/css/joueurs/bootstrap.min.css">
  <!-- JavaScript de Bootstrap -->
  <script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" type="text/css" href="/css/admins/index.css">
  <link rel="icon" type="image/x-icon" href="/images/admins/faviconquizbox.png" />
</head>

<body class="Game-user">
  <div id="container" class="container-Propositions">
    <div class="Illustration">
      <div class="timer-plus-info-quest">
        <div id="numQuestion"></div>
        <div
          style="position: absolute; margin-right: 5px; right: 0; align-items: center; background-color: transparent; color: white;">
          <div id="timer"
            style="width: 50px; height: 50px; background-color: red; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 20px; font-weight: bold;">
          </div>
        </div>
      </div>
      <div class="Question-image">
        <img src="" alt="" id="image">
      </div>
      <button class="bouton-suivant" id="bouton-suivant" type="submit" value="Suivant" href="/">Suivant</button>
    </div>

    <div class="Question">
      <p id="question" class="txt-Question"></p>
    </div>
    <div id="propositions" class="Body-Button align-items-center">
      <div class="d-flex">
        <a class="red-button d-flex align-items-center"><img class="Logo-Carre-Game"
            src="/images/admins/carre.png"><span style="color: white; font-size: 30px;"></span></a>
        <a class="blue-button d-flex align-items-center"><img class="Logo-Triangle-Game"
            src="/images/admins/Triangle.png"><span style="color: white; font-size: 30px;"></span></a>
      </div>
      <div class="d-flex">
        <a class="green-button d-flex align-items-center"><img class="Logo-Rond-Game"
            src="/images/admins/rond.png"><span style="color: white; font-size: 30px;"></span></a>
        <a class="orange-button d-flex align-items-center"><img class="Logo-Losange-Game"
            src="/images/admins/Losange.png"><span style="color: white; font-size: 30px;"></span></a>
      </div>
    </div>
  </div>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/scripts/adminsJeu.js"></script>
</body>

</html>