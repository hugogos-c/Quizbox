<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>QuizBox</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/css/admins/index.css">
  <link rel="icon" type="image/x-icon" href="/images/admins/faviconquizbox.png" />
</head>

<body>
  <div class="Haut-de-page-Loading-Page">
    <div id="numQuestion"></div>
    <a id="fullscreen-btn"><img class="img-fullscreen" src="/images/admins/fullscreen.png"></a>
  </div>
  <div class="Quiz-logo-txt-quiz">
    <img class="img-loader-logo-quiz" src="/images/admins/faviconquizbox.png">
    <p class="quiz-txt-under-logo">Quiz</p>
  </div>
  <div class="Question-bar-Loader">
    <div class="Question-P">
      <p id="question" class="txt-Question"></p>
    </div>
  </div>

  <div class="progress-bar">
    <div class="progress-fill"></div>
  </div>

  <script src="/js/admins/barre.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/scripts/adminsJeu.js"></script>

  <script>
    const fullscreenBtn = document.getElementById('fullscreen-btn');

    fullscreenBtn.addEventListener('click', toggleFullscreen);

    function toggleFullscreen() {
      if (document.fullscreenElement) {
        document.exitFullscreen();
      } else {
        document.documentElement.requestFullscreen();
      }
    }
  </script>
</body>

</html>